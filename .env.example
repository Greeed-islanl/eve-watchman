# Example Environment Configuration for Eve Watchman
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_ROOT_PASSWORD=rootpassword
DB_NAME=eve_watchman
DB_USER=watchman
DB_PASSWORD=watchmanpass
DB_PORT=3306

# Web Server Configuration
WEB_PORT=8080

# Eve Online Application Configuration
# Register your application at https://developers.eveonline.com/
EVE_CLIENT_ID=your_eve_client_id
EVE_CLIENT_SECRET=your_eve_client_secret
EVE_CLIENT_REDIRECT=http://localhost:8080/?core_action=callback
EVE_SUPER_ADMINS=character_id_1,character_id_2

# Website Configuration
SESSION_TIME=43200
STORE_IPS=0

# Timerboards Configuration (Optional)
TIMERBOARDS_ENABLED=0
# TIMERBOARDS_APPROVED_TYPES=RC2
# TIMERBOARDS_APPROVED_DOMAINS=example.com
